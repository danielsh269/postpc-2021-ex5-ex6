<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:text="this is a demo task description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <TextView
        android:id="@+id/doneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="120dp"
        android:text="Done: " />

    <CheckBox
        android:id="@+id/doneCheckBox"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="7dp"
        app:layout_constraintLeft_toRightOf="@id/doneText"
        app:layout_constraintTop_toBottomOf="@id/description"
        android:layout_marginTop="7dp"
        />

    <TextView
        android:id="@+id/creationTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/doneText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="26dp"
        android:text="Creation Date: " />

    <TextView
        android:id="@+id/creationDateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginStart="5dp"
        android:text="creation date demo"
        app:layout_constraintStart_toEndOf="@id/creationTimeText"
        app:layout_constraintTop_toBottomOf="@id/doneText"
        />

    <TextView
        android:id="@+id/modTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/creationTimeText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="22dp"
        android:text="Modified Date: " />

    <TextView
        android:id="@+id/modifiedDateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginStart="5dp"
        android:text="modified date demo"
        app:layout_constraintStart_toEndOf="@id/modTimeText"
        app:layout_constraintTop_toBottomOf="@id/creationTimeText"
        />


</androidx.constraintlayout.widget.ConstraintLayout>